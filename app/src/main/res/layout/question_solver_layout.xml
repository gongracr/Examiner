<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightYellow"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    >

  <LinearLayout
      android:id="@+id/correctionSummary"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginBottom="20dp"
      android:visibility="gone"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="10dp"
          android:layout_weight="1"
          android:text="@string/num_correct_answers"
          android:textStyle="bold"
          />
      <TextView
          android:id="@+id/totalCorrectAnswers"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="0.6"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="10dp"
          android:layout_weight="1"
          android:text="@string/num_wrong_answers"
          android:textStyle="bold"
          />
      <TextView
          android:id="@+id/totalWrongAnswers"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="0.6"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="10dp"
          android:layout_weight="1"
          android:text="@string/num_empty_answers"
          android:textStyle="bold"
          />
      <TextView
          android:id="@+id/totalEmptyAnswers"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="0.6"
          />
    </LinearLayout>
  </LinearLayout>
  <Button
      android:id="@+id/solveExamBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/colorAccent"
      android:padding="10dp"
      android:text="@string/solve_exam"
      />
</LinearLayout>